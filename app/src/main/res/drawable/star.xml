<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true"
        android:drawable="@drawable/star_pressed" /> <!-- enabled -->
    <item android:state_pressed="true"
        android:drawable="@drawable/star_unpressed" /> <!-- pressed -->
    <item android:state_focused="true"
        android:drawable="@drawable/star_unpressed" /> <!-- focused -->
    <item android:state_hovered="true"
        android:drawable="@drawable/star_unpressed" /> <!-- hovered -->
    <item android:drawable="@drawable/star_unpressed" /> <!-- default -->
</selector>